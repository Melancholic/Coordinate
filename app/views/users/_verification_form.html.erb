<%@user||=current_user%>
<%= form_tag({controller:'users',id: @user, action: "verification"},method: "get", class:'form-horizontal') do  %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= current_user.email%></p>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:key, "Verification key:",  class:"col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:key, nil,class:"form-control") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <%= submit_tag("Send key", class: "btn btn-default") %>
      <p class="form-control-static">
        <%= link_to  "Resend", sent_verification_mail_user_url(@user), method: :post %> a letter to  <%=@user.email %> 
      </p>
    </div>
  </div>


<% end %>
