<%# remote - AJAX in enable? %>
<%remote||=false%>
<%= simple_form_for(:session, url: sessions_path, remote:remote) do |f| %>
      <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true %>
    <%= f.input :remember_me, as: :boolean %>
    <%=f.input :captcha do  %>
        <%= show_simple_captcha %>
    <%end%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<%= link_to  "Forgot your password?", reset_password_users_path %> 
