
<%show ||=false %>
<div class='row <%='car-infos' unless show%> <%="car#{car.id}"%>'>
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Car information</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 hidden-xs hidden-sm">
                        <%=image_tag("icons/auto-icon.png", size: "100x100", alt: "#{car.title}", class: "img-circle car-small-image" )  %>
                    </div>
                    <div class="col-xs-2 col-sm-2 hidden-md hidden-lg">
                        <%=image_tag("icons/auto-icon.png", size: "100x100", alt: "#{car.title}", class: "img-circle car-small-image" )  %>
                    </div>
                    <div class="col-xs-10 col-sm-10 hidden-md hidden-lg">
                        <strong><%=car.title%></strong><br>
                        <dl>
                            <dt>Color:</dt>
                            <dd><%=color_to car%></dd>
                            <dt>Created at:</dt>
                            <dd><%=car.created_at.in_time_zone(car.user.time_zone).strftime("%d/%m/%Y")%></dd>
                            <dt>Total tracks:</dt>
                            <dd><%=car.tracks.count%></dd>
                            <% if !car.tracks.empty? && !car.tracks.first.track_locations.empty? %>
                            <dt>Last location at:</dt>
                            <dd><%=car.tracks.first.track_locations.last.time
                            .in_time_zone(car.user.time_zone).strftime("%d/%m/%Y %H:%M:%S")%></td>%></dd>
                            <%end%>   
                            <dt>Tracker UUID:</dt>
                            <dd><%=car.tracker_uuid%></dd>                                
                            <dt>Description:</dt>
                            <dd><%=car.description%></dd>
                        </dl>
                    </div>
                    <div class=" col-md-9 col-lg-9 hidden-xs hidden-sm">
                        <strong><%=car.title%></strong><br>
                        <table class="table table-car-information" >
                            <tbody>
                                <tr>
                                    <td>Color:</td>
                                    <td ><%=color_to car%></td>
                                </tr>
                                <tr>
                                    <td class="col-md-4">Created at:</td>
                                    <td class="col-md-12"><%=car.created_at.in_time_zone(car.user.time_zone).strftime("%d/%m/%Y")%></td>
                                </tr>
                                <tr>
                                    <td>Total tracks:</td>
                                    <td><%=car.tracks.count%></td>
                                </tr>
                                <% if !car.tracks.empty? && !car.tracks.first.track_locations.empty? %>
                                <tr>
                                    <td>Last location at:</td>
                                    <td><%=car.tracks.first.track_locations.last.time
                                    .in_time_zone(car.user.time_zone).strftime("%d/%m/%Y %H:%M:%S")%></td>
                                </tr>   
                                <%end%>                                 
                                <tr>
                                    <td>Tracker UUID:</td>
                                    <td><%=car.tracker_uuid%></td>
                                </tr>                                    
                                <tr>
                                    <td>Description:</td>
                                    <td ><%=car.description%></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-sm btn-primary" type="button"
                data-toggle="tooltip"
                data-original-title="Import data"
                ><i class="glyphicon glyphicon-envelope"></i></button>
                <span class="pull-right">
                    <a class="btn btn-sm btn-warning" type="button"
                    data-toggle="tooltip"
                    data-original-title="Edit this car"
                    href="<%=edit_car_path(car)%>"><i class="glyphicon glyphicon-edit"></i>
                </a>

                <%= link_to car, id:"car#{car.id}delete", 
                class: "btn btn-sm btn-danger",
                    type:"button", 
                    "data-toggle" => "tooltip", 
                    "data-original-title"=>"Delete car", 
                    "data-confirm"=>"<h4>Are you sure you want to delete this car: <b>#{car.title}</b> ?<br>"+
                    "<p class='text-danger'>Warning: All data on it will be deleted permanently!</p></h4>",
                    method: :delete do %>
                    <i class="glyphicon glyphicon-remove"></i></a>
                    <% end %>
                </span>
            </div>
        </div>
    </div>
</div>