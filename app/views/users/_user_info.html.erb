<div class="row">
<div class="col-md-2">
	<strong><%=@user.login%></strong>
</div>
</div>

<div class="row">
<div class="col-md-12">
<table class="table" >
	<tbody>
		<%unless(@user.name.nil? || @user.name.empty?)%>
			<tr>
				<td>Name:</td>
				<td ><%=@user.name%></td>
			</tr>
		<%end%>
		<%unless(@user.second_name.nil? || @user.second_name.empty?)%>
			<tr>
				<td>Surname:</td>
				<td ><%=@user.second_name%></td>
			</tr>
		<%end%>
		<%unless(@user.middle_name.nil? || @user.middle_name.empty?)%>
			<tr>
				<td>Middle name:</td>
				<td ><%=@user.middle_name%></td>
			</tr>
		<%end%>
		<tr>
			<td>E-mail:</td>
			<td ><%=mail_to(@user.email, @user.email.truncate(20))%></td>
		</tr>
		<%unless(@user.full_region.nil? || @user.full_region.empty?)%>
			<tr>
				<td>Region:</td>
				<td ><%=@user.full_region%></td>
			</tr>
		<%end%>
	</tbody>
</table>
</div>
</div>
<div class="row">
<div class="col-md-offset-9 col-md-2">
	<%=link_to "Edit", edit_user_path(current_user), class: "btn btn-default btn-xs"%>
</div>
</div>