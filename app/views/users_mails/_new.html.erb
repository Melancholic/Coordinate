<%# remote - AJAX status %>
<%remote||=false%>
<% mail ||=UsersMail.new%>
<%= simple_form_for(mail, remote: remote, id:"contact_us_form") do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
      <%if(signed_in? && current_user.name && !current_user.name.empty?)%>
        <%= f.input :first_name, required: true, autofocus: true, span:'span6', input_html: {value:current_user.name}, placeholder:"Name", label:false %>
      <%else%>
        <%= f.input :first_name, required: true, autofocus: true, span:'span6', placeholder:"Name", label:false %>
      <%end%>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
      <%if(signed_in? && current_user.second_name && !current_user.second_name.empty?)%>
        <%= f.input :last_name, required: true, placeholder:"Lastname", input_html: {value:current_user.second_name},label:false%>
      <%else%>
        <%= f.input :last_name, required: true, placeholder:"Lastname", label:false%>
      <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <%if(signed_in?)%>
        <%= f.input :email, required: true, placeholder:"E-mail", label:false, input_html: {value:current_user.email}%>
      <%else%>
        <%= f.input :email, required: true, placeholder:"E-mail", label:false%>
      <%end%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <%= f.input :subject, required: true, placeholder:"Subject...", label:false  %> 
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <%= f.input :message,as: :text, required: true, input_html: {rows: 6, placeholder:"Message..."},label:false %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <%=f.input :captcha do  %>
      <%= show_simple_captcha(:object=>"users_mail") %>
      <%end%>
    </div>
  </div>
  <%if signed_in?%>
    <%= f.input :user_id, as: :hidden,input_html: {value:current_user.id,hide:true} %>
  <%end%>
</div>

<div class="form-actions">
    <div class="panel-footer" style="margin-bottom:-14px;">
    <%= f.button :submit, "Send", class:"btn btn-success" %>
    <input type="reset" class="btn btn-danger" value="Clear">
    <!--<button style="float: right;" type="button" class="btn btn-default btn-close" data-dismiss="modal">Close</button>-->
  </div>
</div>
<% end %>


