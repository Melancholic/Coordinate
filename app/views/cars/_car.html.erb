  <div class="row car-row">
    <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">
        <%=image_tag("icons/auto-icon.png", size: "50x50", alt: "#{car.title}", class: "img-circle car-small-image" )  %>
    </div>
    <div class="col-xs-8 col-sm-9 col-md-10 col-lg-10">
        <strong><%=link_to car.title, car%></strong><br>
        <span class="text-muted"><p><%= car.description %></p></span>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 dropdown-car" data-for='.<%="car#{car.id}"%>'>
        <i class="glyphicon glyphicon-chevron-down text-muted"></i>
    </div>
</div>
<%= render 'car_card', car: car %>