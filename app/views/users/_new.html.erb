<%# remote - AJAX status %>
<%remote||=false%>
<% user ||=@user%>
<% user ||=User.new%>
<%= simple_form_for(user, remote: remote) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :login, required: true, autofocus: true, span:'span6' %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :is_agreed, as: :boolean, checked_value: true, unchecked_value: false, required: true %>
  <%=f.input :captcha do  %>
    <%= show_simple_captcha(:object=>"user") %>
  <%end%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, t('sign_up')%>
  </div>
<% end %>
<%= link_to  t('forgot_password'), reset_password_users_path %> 

