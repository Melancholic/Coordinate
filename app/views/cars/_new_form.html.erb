<div class="col-md-12" id="new_car_form">
	<%@user ||=current_user %>      
	<%= simple_form_for(@car, class:"form-horizontal") do |f| %>
	<div class="col-md-3">
		<div class="text-center">
			<% if @car.image %>
			<%= image_tag @car.img.url, height:200, class:"avatar-big img-rounded" %>
			<% else %>
			<section>
				<%= image_tag("icons/auto-icon.png",height:200, class:"avatar-big img-rounded") %>
			</section>
			<% end %>
			<h3>Upload image of this car</h3>

			<%= f.simple_fields_for :image, f.object.image || f.object.build_image do |i| %>
			<%=i.input :img, label: false, input_html:{class:"form-control"}%>
			<%= i.input  :_destroy, as: :boolean, label:"Don't use custom image", hint:"Your image will be deleted." %>
			<%end%>
		</div>
	</div>
	<div class="col-md-offset-1 col-md-6 personal-info">
		<div class="row">
			<%= f.input(:title) %>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%=f.input :color,  as: :select do
					f.select :color, Color.select_array
					end%>
				</div>	
				<div class="col-md-4">
					<%= f.input :priority%>
				</div>
			</div>
			<div class="row">
				<%= f.input :description, as: :text, input_html: {rows: 5, 
					:onkeyup =>"length_check(#{Car::DescriptionLength}, 'car_description', 'counter')",
					:onclick =>"length_check(#{Car::DescriptionLength}, 'car_description', 'counter')" }%>
				<span id="counter"> <%= 180-((@car.description.nil?)? 0 : @car.description.length) %> / <%= Car::DescriptionLength %></span>
			</div>
			<div class=" center row">
				<%= f.button :submit, "Save",class:"btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>

<%= javascript_tag do%>
	$("#car_priority").slider();
<%end%>